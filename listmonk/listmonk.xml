  <Config Name="Application Port" Target="9000" Default="9000" Mode="tcp" Description="" Type="Port" Display="always" Required="true" Mask="false">9000</Config>
  <Config Name="Upload Folder" Target="/listmonk/uploads" Default="/mnt/user/appdata/listmonk/uploads" Mode="rw" Description="" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/listmonk/uploads</Config>
